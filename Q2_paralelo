

    int array[120];
    int total = 0;
    for (int i = 0; i < 120; i++) {
        array[i] = i;
    }

 

    

    
   

 

    // Initialize all the times
#pragma omp parallel  num_threads(8)
    {
        int id = omp_get_thread_num();
        int valorarray = 0;

        for (int i = id; i < 120; i+=8) {
            valorarray += array[i];
        }

       #pragma omp atomic
        total += valorarray;
        
    }


      
    cout << total;

